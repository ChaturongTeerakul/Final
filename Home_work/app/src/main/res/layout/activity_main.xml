<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7DDDEA"
    android:backgroundTint="#99D9F6"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/show"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textAllCaps="false"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:backgroundTint="#F84884"
                android:fontFamily="sans-serif-smallcaps"
                android:text="C"
                android:textSize="30dp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/del"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:backgroundTint="#E13E3E"
                android:fontFamily="sans-serif-smallcaps"
                android:text="DEL"
                android:textSize="30dp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/per"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:backgroundTint="#E69D32"
                android:fontFamily="sans-serif-smallcaps"
                android:text="%"
                android:textSize="30dp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/slash"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:backgroundTint="#C9F4E448"
                android:fontFamily="sans-serif-smallcaps"
                android:text="/"
                android:textSize="30dp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:backgroundTint="#65D169"
                android:fontFamily="sans-serif-smallcaps"
                android:text="7"
                android:textSize="30dp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:backgroundTint="#C941AFDF"
                android:fontFamily="sans-serif-smallcaps"
                android:text="8"
                android:textSize="30dp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:backgroundTint="#3B54DF"
                android:fontFamily="sans-serif-smallcaps"
                android:text="9"
                android:textSize="30dp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/mul"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:backgroundTint="#C9A23CDF"
                android:fontFamily="sans-serif-smallcaps"
                android:text="X"
                android:textSize="30dp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:backgroundTint="#4ABFB4"
                android:fontFamily="sans-serif-smallcaps"
                android:text="4"
                android:textSize="30dp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:backgroundTint="#C95E6AD6"
                android:fontFamily="sans-serif-smallcaps"
                android:text="5"
                android:textSize="30dp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:backgroundTint="#F1CC5E"
                android:fontFamily="sans-serif-smallcaps"
                android:text="6"
                android:textSize="30dp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:backgroundTint="#F66234"
                android:fontFamily="sans-serif-smallcaps"
                android:text="-"
                android:textSize="30dp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:backgroundTint="#3F51B3"
                android:fontFamily="sans-serif-smallcaps"
                android:text="1"
                android:textSize="30dp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:backgroundTint="#8650E8"
                android:fontFamily="sans-serif-smallcaps"
                android:text="2"
                android:textSize="30dp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:backgroundTint="#F1734B"
                android:fontFamily="sans-serif-smallcaps"
                android:text="3"
                android:textSize="30dp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:backgroundTint="#C9332DD8"
                android:fontFamily="sans-serif-smallcaps"
                android:text="+"
                android:textSize="30dp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="236dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/zero"
                    android:layout_width="200dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:backgroundTint="#EF9478"
                    android:fontFamily="casual"
                    android:text="0"
                    android:textSize="30dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/dot"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:backgroundTint="#4DC8FF"
                    android:fontFamily="casual"
                    android:text="."
                    android:textSize="30dp"
                    android:textStyle="bold|italic" />

                <Button
                    android:id="@+id/tt"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:backgroundTint="#C94EEC88"
                    android:fontFamily="casual"
                    android:text="="
                    android:textSize="30dp"
                    android:textStyle="bold|italic"
                    android:visibility="visible" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>